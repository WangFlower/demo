<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="Momo_ProgressBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/emotion_search_loading_color</item>
        <item name="colorPrimaryDark">@color/emotion_search_loading_color</item>
        <item name="colorAccent">@color/emotion_search_loading_color</item>
    </style>

    <style name="BaseToolBarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:layout_width">match_parent</item>
        <item name="elevation">0dp</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <item name="overlapAnchor">false</item>
        <item name="android:background">#00000000</item>
        <item name="actionOverflowMenuStyle">@style/PopupMenu</item>

        <item name="title">@null</item>
    </style>

    <style name="PopupMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <!--是否覆盖在Toolbar上面-->
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownVerticalOffset">?attr/actionBarSize</item>
    </style>

</resources>
