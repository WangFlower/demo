<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mvp.view.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/BaseToolBarTheme"
        android:background="#fafafa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.Toolbar>
    <TextView
        android:id="@+id/un"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:text="username:"/>
    <com.example.momo.myapplication.demo.edittext.SamEdText
        android:id="@+id/username"
        android:layout_below="@+id/toolbar"
        android:layout_toRightOf="@+id/un"
        android:layout_width="100dp"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/p"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/username"
        android:text="pwd:" />
    <EditText
        android:id="@+id/pwd"
        android:layout_toRightOf="@+id/p"
        android:layout_below="@+id/username"
        android:layout_width="100dp"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/commit"
        android:layout_below="@+id/pwd"
        android:layout_width="150dp"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/cancel"
        android:layout_below="@+id/pwd"
        android:layout_toRightOf="@+id/commit"
        android:layout_width="150dp"
        android:layout_height="wrap_content" />

    <ProgressBar
        android:id="@+id/pro"
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        android:visibility="gone"/>


</RelativeLayout>
