<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menu_search_group"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/bglistitem_selector_white"
    >
    <ImageView
        android:id="@+id/menu_create_group"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        />

    <EditText
        android:id="@+id/edit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/menu_create_group"
        android:background="@color/background_normal_selected"/>

</RelativeLayout>

